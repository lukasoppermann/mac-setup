if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 190)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 0)
	else
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 4)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 1)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[m"
	BOLD=""
	RESET="\033[m"
fi

export MAGENTA
export ORANGE
export GREEN
export PURPLE
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
	[[ -n "$(git status -s 2> /dev/null)" ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

# set title of terminal window to current folder
base1="${PWD##*/}"
dir1="${PWD%/*}"
dir2="${PWD%/*/*}"
dir3="${PWD%/*/*/*}"
DIRNAME="${dir3##*/}/${dir2##*/}/${dir1##*/}/$base1"
PROMPT_COMMAND='echo -ne "\033]0; /$DIRNAME\007"'


export PS1="\[${BOLD}${MAGENTA}\]\u \[$GREEN\]\w\[$RESET\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" [\")\[$ORANGE\]\$(parse_git_branch)\[$RESET\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \"]\") \[$ORANGE\]❯ \[$RESET\]"
export PS2="\[$ORANGE\]→ \[$RESET\]"
