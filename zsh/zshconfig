# define config path
path_zshconfigfolder="${ZDOTDIR:-$HOME}/Repos/mac-setup/zsh"
# init prezto
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi
# load zsh aliases
path_zshalias="${path_zshconfigfolder}/zshalias"
if [ -f $path_zshalias ]; then
    source $path_zshalias
else
    echo -e "\e[31;1m404: ${path_zshalias} not found.\e[0m"
fi

# disable autocorrect in zsh
unsetopt correct_all
unsetopt correct

# why would you type 'cd dir' if you could just type 'dir'?
# setopt AUTO_CD

# Add git auto-completion (git-completion files need to be downloaded)
# zstyle ':completion:*:*:git:*' script $path_zshconfigfolder/.git-completion.bash
# fpath=($path_zshconfigfolder $fpath)


### Show zsh & version 
echo Current zsh: $(which zsh) / $(zsh --version)
